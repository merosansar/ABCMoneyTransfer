        <div class="d-flex flex-column col-md-4">
            <input type="number" asp-for="PayoutAmount" step="0.01" class="form-control" placeholder="Payout Amount" />
        </div> *@

        <div class="d-flex flex-column align-items-start col-md-2">
            <label for="Currency">Sender Currency:</label>
        </div>
        <div class="d-flex flex-column col-md-4">
