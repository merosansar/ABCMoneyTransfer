@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#transactionTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                dom: 'lfrtip',
                columns: [
                    { data: 'Id' },
                    { data: 'SenderName' },
                    { data: 'SenderAddress' },
                    { data: 'SenderCountry' },
                    { data: 'Smobile' },
                    { data: 'ReceiverName' },
                    { data: 'ReceiverAddress' },
                    { data: 'ReceiverCountry' },
                    { data: 'Rmobile' },
                    { data: 'TransferAmount' },
                    { data: 'PayoutAmount' },
                    { data: 'SendDate' }  // Date column
                ]
            });
        });
    </script>
}