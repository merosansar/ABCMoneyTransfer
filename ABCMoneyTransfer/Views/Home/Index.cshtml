@{
    ViewData["Title"] = "Home - M-Remit ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to bottom, #4caf50, #81c784); /* Gradient colors */
            color: #fff; /* Text color for contrast */
            font-family: Arial, sans-serif;
        }

        h1, h3, p {
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7); /* Text shadow for better readability */
        }

        .container {
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
            padding: 30px;
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #2196f3;
            border: none;
        }

            .btn-primary:hover {
                background-color: #1976d2;
            }
    </style>
</head>
<body>
    <div class="container text-center my-5">
        <h1 class="display-4">Welcome to the  M-Remit </h1>
        <p class="lead">Send money easily from Malaysia to Nepal with secure, fast, and reliable service.</p>

        <div class="mb-4">
            <a href="/Transaction/Create" class="btn btn-primary btn-lg">Send Money Now</a>
        </div>

        <div>
            <h3>Why Use Our Service?</h3>
            <ul class="list-unstyled">
                <li><strong>Fast Transfers:</strong> Get your money transferred within minutes.</li>
                <li><strong>Secure:</strong> Bank-level security for all your transactions.</li>
                <li><strong>Best Exchange Rates:</strong> Enjoy competitive rates for MYR to NPR conversion.</li>
            </ul>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>